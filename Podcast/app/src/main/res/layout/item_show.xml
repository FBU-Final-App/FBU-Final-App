<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/ivShowPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:transitionName="profile"/>

    <TextView
        android:id="@+id/tvShowTitle"
        android:transitionName="title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivShowPhoto"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Talking Points" />

    <TextView
        android:id="@+id/tvShowPublisher"
        android:transitionName="pub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvShowTitle"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/ivShowPhoto"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="The Points Guy" />

</RelativeLayout>